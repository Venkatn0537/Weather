<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_city_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_city_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="@string/et_enter_city"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <ImageView
            android:id="@+id/iv_city_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_arrow_forward" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_city_search"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_city_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:paddingEnd="0dp"
            android:paddingStart="8dp"
            android:text="@string/tv_city_label" />

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            tools:text="Albany" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_city_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_city_name"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_weather_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:paddingEnd="0dp"
            android:paddingStart="8dp"
            android:text="@string/tv_weather_label" />

        <TextView
            android:id="@+id/tv_city_weather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            tools:text="Weather Descrption" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_city_weather_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/ll_city_weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>